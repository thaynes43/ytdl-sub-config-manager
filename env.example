# Example environment variables for ytdl-sub config manager
# Copy this file to .env and customize with your actual values
# The .env file is git-ignored for security

# ============================================================================
# REQUIRED CONFIGURATION
# ============================================================================

# Peloton account credentials
PELOTON_USERNAME=your-peloton-username-or-email
PELOTON_PASSWORD=your-peloton-password

# Path to your media directory (where downloaded files are stored)
MEDIA_DIR=D:\path\to\your\media\directory

# ============================================================================
# CONDITIONAL CONFIGURATION
# ============================================================================

# Path to subscriptions YAML file (defaults to temp repo path if not set)
SUBS_FILE=D:\path\to\subscriptions.yaml

# GitHub integration (optional - for automatic PR creation)
GITHUB_REPO_URL=github.com/username/repository-name
GITHUB_TOKEN=ghp_your_github_personal_access_token

# ============================================================================
# OPTIONAL CONFIGURATION (with defaults)
# ============================================================================

# Maximum classes to scrape per activity (default: 25)
PELOTON_CLASS_LIMIT_PER_ACTIVITY=25

# Comma-separated list of activities to scrape (default: all except 'all')
# Options: strength,yoga,meditation,cardio,stretching,cycling,running,walking,bootcamp,bike_bootcamp,rowing,row_bootcamp
PELOTON_ACTIVITY=cycling,yoga,strength

# Whether to run in container mode (default: True)
# Set to False for local development with webdriver-manager
RUN_IN_CONTAINER=False

# Number of page scrolls to perform when scraping (default: 10)
PELOTON_PAGE_SCROLLS=10

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level (default: INFO)
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=DEBUG

# Log format (default: standard)
# Options: standard, json
LOG_FORMAT=standard

# ============================================================================
# DEBUG/DEVELOPMENT SETTINGS
# ============================================================================

# For development, you might want to use smaller limits and fewer activities
# PELOTON_CLASS_LIMIT_PER_ACTIVITY=5
# PELOTON_ACTIVITY=cycling
# PELOTON_PAGE_SCROLLS=3
